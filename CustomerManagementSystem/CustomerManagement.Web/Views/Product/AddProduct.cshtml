
@using CustomerManagement.Web.Models

@model Product
@{
    @ViewBag.Title
}

<h1>Add Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for=@Model.ProductName></label>
        <input class="form-control" asp-for=@Model.ProductName />
    </div>

    <div class="form-group">
        <label asp-for=@Model.Description></label>
        <input class="form-control" asp-for="@Model.Description"/>
            
    </div>

    <div class="form-group">
        <label asp-for=@Model.SupplierName></label>
        <input class="form-control" asp-for=@Model.SupplierName />
    </div>

    <input class="btn btn-default" type="submit" name="Save" value="Save" />
</form>

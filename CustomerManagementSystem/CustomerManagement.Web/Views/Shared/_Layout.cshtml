<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="~/assets/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <script src="~/assets/jquery/dist/jquery.min.js"></script>

    <script src="~/assets/bootstrap/dist/js/bootstrap.min.js"></script>

    <link href="~/assets/jqueryui/jquery-ui.css" rel="stylesheet" />

    <script type="text/javascript">
                .carousel - inner > .item > img,
                .carousel - inner > .item > a > img {
                width: 70 %;
                margin: auto;
            }
    </script>

    <script src="~/node_modules/jqueryui/jquery-ui.js"></script>

</head>
<body>
    @* Navigation Bar  *@
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">CRM Web</a>
            </div>

            <ul class="nav navbar-nav">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Customer" asp-action="Index">Customers</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        User Management
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a asp-controller="ApplicationRole" asp-action="Index">User Roles</a></li>
                        <li><a asp-controller="User" asp-action="Index">User</a></li>
                        <li><a href="#">Page 1-3</a></li>
                    </ul>
                </li>
            </ul>

        </div>
    </nav>
    
    @* --------Body-------- *@
    <div class="container">
        @RenderBody()
    </div>

    <footer>
        @RenderSection("footer", required: false)
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
